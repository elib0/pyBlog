@import 'jeet/framework'
@import 'jeet/goodies'

color-naranja = #F15D22
color-header = #5E2750
color-widgets = #EFEFEF
color-footer = color-widgets

input[type=text],input[type=search]
    border-radius 8px;

body
    font-family: Times, serif
    background white
    margin 2em 0

input[type=button], input[type=submit], input[type=reset]
    btn()

body > header
    background-color: color-header
    color white
    height 80px
    .header-content
        center()
        .logo
            position: absolute
            top 2px
            background-color: color-naranja
            width 140px
            height: @width
            padding 30px 0
            border-radius 50%
            font-size 3em
            font-weight: bold
            text-align: center
            display inline-block
            line-height 30px
            -webkit-border-radius 50%
            -moz-border-radius 50%
            -webkit-box-shadow 0px 0px 12px black
            -moz-box-shadow 0px 0px 12px black
            box-shadow 0px 0px 12px black
            &:after, &:before
                left 130px
                border solid transparent
                content " "
                height 0
                width 0
                position absolute
                pointer-events none
            &:after
                border-left-color color-naranja
                border-width 30px
                top 50%
                margin-top -30px

        #menu-principal
            offset(10)
            display inline-block
            ul
                margin 0
                padding 0
                li
                    float left
                    margin-left 8px
                    padding 28px 0
                    a, a:hover, a:link, a:active
                        color white
                        font-weight: bold
                        font-size 18px
                        text-decoration: none

.wrap
    center()
    border-left solid 1px darken(color-footer, 10)
    border-right solid 1px darken(color-footer, 10)
    min-height: 650px
    padding 0
    .carrusel
        background-color: color-header
        height 200px
    .content
        center()
        padding-right 0
        .noticias
            col(17)
            min-height 450px
            header h3
                a, a:hover, a:link, a:visited
                    text-decoration none
                    color black;
                    transition all 1s ease
                    webkit-transition all 1s ease
                    moz-transition all 1s ease
                    o-transition all 1s ease
                    ms-transition all 1s ease
                a:hover
                    color: color-naranja

        .widgets
            col(7)
            border-left solid 1px darken(color-footer, 10)
            background-color: color-widgets
            text-align: center
            min-height 450px

footer
    background-color: color-footer
    width 100%
    height 12em
    .footer-content
        center()
        .mapa-sitio
            col(17)
        .copyright
            col(7)
            padding 0 1.2em


// Mobile
bp()
endbp()
